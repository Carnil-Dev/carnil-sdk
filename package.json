{
  "name": "@carnil/carnil-payments-sdk",
  "version": "0.1.1",
  "description": "A unified payments SDK for Stripe, Razorpay, and other payment providers",
  "private": false,
  "scripts": {
    "build": "tsup",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish --provenance",
    "prepublishOnly": "turbo run build",
    "publish:all": "node scripts/build-and-publish.js publish-all",
    "publish:core": "node scripts/build-and-publish.js publish core",
    "publish:stripe": "node scripts/build-and-publish.js publish stripe",
    "publish:razorpay": "node scripts/build-and-publish.js publish razorpay",
    "publish:react": "node scripts/build-and-publish.js publish react",
    "publish:next": "node scripts/build-and-publish.js publish next",
    "publish:adapters": "node scripts/build-and-publish.js publish adapters",
    "publish:analytics": "node scripts/build-and-publish.js publish analytics",
    "publish:pricing-editor": "node scripts/build-and-publish.js publish pricing-editor",
    "publish:webhooks": "node scripts/build-and-publish.js publish webhooks",
    "publish:compliance": "node scripts/build-and-publish.js publish compliance",
    "publish:globalization": "node scripts/build-and-publish.js publish globalization"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "keywords": [
    "payments",
    "stripe",
    "razorpay",
    "sdk",
    "typescript",
    "react",
    "nextjs",
    "billing",
    "subscriptions",
    "webhooks"
  ],
  "author": "Carnil Team <hello@carnil.dev> (https://carnil.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Carnil-Dev/carnil-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/Carnil-Dev/carnil-sdk/issues"
  },
  "homepage": "https://carnil.dev",
  "files": [
    "packages/*/dist",
    "packages/*/package.json",
    "packages/*/README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": ".eslintrc.js",
  "directories": {
    "doc": "docs",
    "example": "examples"
  }
}
