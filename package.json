{
  "name": "@carnil/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "A unified payments SDK for Stripe, Razorpay, and other payment providers",
  "scripts": {
    "build": "turbo run build",
    "build:core": "pnpm --filter @carnil/core build",
    "build:stripe": "pnpm --filter @carnil/stripe build",
    "build:razorpay": "pnpm --filter @carnil/razorpay build",
    "build:react": "pnpm --filter @carnil/react build",
    "build:next": "pnpm --filter @carnil/next build",
    "build:adapters": "pnpm --filter @carnil/adapters build",
    "build:analytics": "pnpm --filter @carnil/analytics build",
    "build:webhooks": "pnpm --filter @carnil/webhooks build",
    "build:pricing-editor": "pnpm --filter @carnil/pricing-editor build",
    "build:compliance": "pnpm --filter @carnil/compliance build",
    "build:globalization": "pnpm --filter @carnil/globalization build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish --provenance"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "keywords": [
    "payments",
    "stripe",
    "razorpay",
    "sdk",
    "typescript",
    "react",
    "nextjs",
    "billing",
    "subscriptions",
    "webhooks"
  ],
  "author": "Carnil Team <hello@carnil.dev> (https://carnil.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Carnil-Dev/carnil-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/Carnil-Dev/carnil-sdk/issues"
  },
  "homepage": "https://carnil.dev"
}
