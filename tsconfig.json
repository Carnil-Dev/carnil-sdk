{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@carnil/core": ["./src"],
      "@carnil/core/*": ["./src/*"],
      "@carnil/stripe": ["./src/stripe"],
      "@carnil/stripe/*": ["./src/stripe/*"],
      "@carnil/razorpay": ["./src/razorpay"],
      "@carnil/razorpay/*": ["./src/razorpay/*"],
      "@carnil/react": ["./src/react"],
      "@carnil/react/*": ["./src/react/*"],
      "@carnil/next": ["./src/next"],
      "@carnil/next/*": ["./src/next/*"],
      "@carnil/adapters": ["./src/adapters"],
      "@carnil/adapters/*": ["./src/adapters/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
